.search {
  display: -webkit-box;
  -webkit-box-align: center;
  background: #f5f5f5;
  padding: 0 35rpx 35rpx 35rpx;
  box-shadow: inset 0rpx -1rpx 0rpx 0rpx #dddddd;
}

.search .value_wrap {
  height: 82rpx;
  -webkit-box-flex: 1;
  box-sizing: border-box;
  padding: 0 20rpx;
  display: -webkit-box;
  -webkit-box-align: center;
  background: #fff;
  color: #aaaaaa;
}

.search .value_wrap input {
  display: block;
  -webkit-box-flex: 1;
  box-sizing: border-box;
  padding-left: 20rpx;
  font-size: 28rpx;
  line-height: 82rpx;
  height: 82rpx;
}

.search .cancel {
  padding-left: 15rpx;
  color: #9e925f;
  font-size: 28rpx;
  margin-left: 15rpx;
  display: none;
}

.search .cancel.show {
  display: block;
}

.tec_tab {
  display: -webkit-box;
  line-height: 106rpx;
  text-align: center;
  background: #fff;
  box-shadow: inset 0rpx -1rpx 0rpx 0rpx #dddddd;
}

.tec_tab .tec_tab_li {
  -webkit-box-flex: 1;
  font-size: 28rpx;
  color: #666666;
}

.tec_tab .tec_tab_li.active {
  border-bottom: 1rpx solid #FF5183;
  color: #FF5183;
}

.Fixed {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 106rpx;
  z-index: 1;
  background-color: #ffffff;
  display: -webkit-box;
  -webkit-box-pack: justify;
  box-shadow: 0 4rpx 23rpx 0 rgba(0, 0, 0, 0.1);
}

.Fixed .people {
  margin-left: 36rpx;
  line-height: 106rpx;
  color: #92979b;
  font-size: 28rpx;
}

.Fixed .people .number {
  font-size: 35rpx;
  color: #f96868;
  display: inline-block;
}

.Fixed .submit {
  line-height: 106rpx;
  font-size: 35rpx;
  padding: 0 78rpx;
  background: #5D97FF;
  color: #fff;
}
