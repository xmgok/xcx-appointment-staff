.content_edit {
  padding: 58rpx 35rpx;
  background: #f5f5f5;
}

.content_edit .state_text {
  display: -webkit-box;
  -webkit-box-pack: justify;
  font-size: 25rpx;
  color: #666666;
  line-height: 46rpx;
}

.content_edit .state_text .text_name {
  margin-bottom: 56rpx;
  font-size: 46rpx;
  color: #000000;
}

.content_edit .state_mark {
  background-image: linear-gradient(90deg, #ff4e81 0%, #ffbd7b 100%), linear-gradient(#ffffff, #ffffff);
  background-blend-mode: normal, normal;
  box-shadow: 0 20rpx 40rpx 0 rgba(255, 95, 128, 0.3);
  border-radius: 12rpx;
  padding: 44rpx 36rpx;
  color: #fff;
  margin-bottom: 44rpx;
}

.content_edit .state_mark .mark_vip {
  font-size: 25rpx;
  margin-bottom: 22rpx;
}

.content_edit .state_mark .mark_num {
  font-size: 35rpx;
}

.content_edit .New_item {
  border-radius: 10rpx;
  padding: 40rpx 35rpx;
  margin-bottom: 22rpx;
  box-shadow: 0rpx 4rpx 23rpx 0rpx rgba(0, 0, 0, 0.1);
  font-size: 28rpx;
  color: #92979b;
  background: #fff;
  display: -webkit-box;
  -webkit-box-pack: justify;
}

.content_edit .New_item:first-child {
  box-shadow: inset 0rpx 1rpx 0rpx 0rpx #dddddd;
}

.content_edit .New_Text {
  padding: 35rpx;
  box-shadow: 0rpx 4rpx 23rpx 0rpx rgba(0, 0, 0, 0.1);
  background: #fff;
  font-size: 28rpx;
  color: #92979b;
  display: flex;
}

.content_edit .New_Text .textarea {
  flex: 1;
  resize: none;
  height: 130rpx;
  border: solid 2rpx #cccccc;
  margin-left: 22rpx;
  padding: 12rpx;
  box-sizing: border-box;
}

.content_edit .New_btn {
  margin: 58rpx 0;
  text-align: center;
  padding: 30rpx;
  font-size: 35rpx;
  border-radius: 100rpx;
}

.content_edit .New_btn.save_btn {
  background: #588aff;
  color: #fff;
}

.content_edit .New_btn.cancle_btn {
  background: #fff;
  border: 1rpx solid #ccc;
}
