page {
  padding-bottom: 20rpx;
}

.consume {
  margin: 58rpx;
  padding: 46rpx 35rpx 50rpx;
  box-shadow: 0 23rpx 23rpx 0 rgba(213, 213, 213, 0.3);
  border-radius: 12rpx;
  background: #fff;
}

.consume .total_text {
  font-size: 35rpx;
  color: #000000;
  margin-bottom: 32rpx;
}

.consume .amount_total {
  font-size: 35rpx;
  color: #dc1d54;
  margin-bottom: 45rpx;
}

.consume .amount_total .total_amount {
  display: inline-block;
  font-size: 58rpx;
  margin-right: 22rpx;
}

.consume .amount_total .amount_divide {
  display: inline-block;
  font-size: 23rpx;
  color: #ffffff;
  padding: 12rpx 26rpx;
  background-color: #588aff;
  box-shadow: 0 12rpx 23rpx 0 rgba(88, 138, 255, 0.5);
  border-radius: 4rpx;
  position: relative;
  top: -14rpx;
}

.consume .tabtitle {
  display: flex;
  display: -webkit-box;
  border-top: 2rpx solid #dddddd;
  border-bottom: 2rpx solid #dddddd;
}

.consume .tabtitle .tabtitle_li {
  width: 33.33%;
  flex: 1;
  -webkit-box-flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #000000;
  box-shadow: inset -2rpx 0 0 0 #dddddd;
}

.consume .tabtitle .tabtitle_li:first-child {
  border-left: 2rpx solid #dddddd;
  box-sizing: border-box;
}

.consume .employees {
  display: flex;
  display: -webkit-box;
}

.consume .employees .employees_li {
  width: 33.33%;
  flex: 1;
  -webkit-box-flex: 1;
  text-align: center;
  box-shadow: inset -2rpx 0 0 0 #dddddd;
  font-size: 28rpx;
  padding: 24rpx 0;
  position: relative;
}

.consume .employees .employees_li .emp_name {
  color: #2c67f2;
  margin-bottom: 18rpx;
}

.consume .employees .employees_li .emp_code {
  font-size: 23rpx;
  color: #92979b;
}

.consume .employees .employees_li .amount {
  position: absolute;
  width: 30rpx;
  height: 42rpx;
  background: #fff;
  top: 48rpx;
  left: 30rpx;
}

.consume .employees .employees_li .percent {
  position: absolute;
  width: 30rpx;
  height: 42rpx;
  background: #fff;
  top: 48rpx;
  right: 30rpx;
  z-index: 11;
}

.consume .employees .employees_li input {
  border-bottom: 2rpx solid #dddddd;
  width: 130rpx;
  box-sizing: border-box;
  margin: 16rpx auto 0;
}

.consume .employees .employees_li .seeamount {
  margin: 24rpx 0;
}

.consume .employees .employees_li .seepercent {
  margin: 24rpx 0;
}

.consume .employees .employees_li .clear {
  width: 70rpx;
  height: 60rpx;
  position: absolute;
  left: -80rpx;
  top: 50%;
  transform: translateY(-50%);
}

.consume .already {
  text-align: right;
  font-size: 28rpx;
  padding: 34rpx 34rpx 0;
}

.consume .already .amount {
  display: inline-block;
  color: #dc1d54;
}

.callot_btn {
  text-align: center;
  font-size: 35rpx;
  padding: 30rpx;
  margin: 58rpx 35rpx;
  color: #fff;
  background-color: #588aff;
  box-shadow: 0 12rpx 23rpx 0 rgba(88, 138, 255, 0.5);
  border-radius: 50rpx;
}
