page {
  padding-bottom: 20rpx;
}

.collection {
  margin: 58rpx;
  padding: 46rpx 35rpx 50rpx;
  box-shadow: 0 23rpx 23rpx 0 rgba(213, 213, 213, 0.3);
  border-radius: 12rpx;
  background: #fff;
}

.collection .total_text {
  font-size: 35rpx;
  color: #000000;
  margin-bottom: 32rpx;
}

.collection .amount_total {
  font-size: 35rpx;
  color: #dc1d54;
  margin-bottom: 45rpx;
}

.collection .amount_total .total_amount {
  display: inline-block;
  font-size: 58rpx;
}

.collection .tabtitle {
  display: flex;
  display: -webkit-box;
  border-top: 2rpx solid #dddddd;
  border-bottom: 2rpx solid #dddddd;
}

.collection .tabtitle .tabtitle_li {
  width: 33.33%;
  flex: 1;
  -webkit-box-flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #000000;
  box-shadow: inset -2rpx 0 0 0 #dddddd;
}

.collection .tabtitle .tabtitle_li:first-child {
  border-left: 2rpx solid #dddddd;
  box-sizing: border-box;
}

.collection .employees {
  display: flex;
  display: -webkit-box;
}

.collection .employees .employees_li {
  width: 33.33%;
  flex: 1;
  -webkit-box-flex: 1;
  text-align: center;
  box-shadow: inset -2rpx 0 0 0 #dddddd;
  font-size: 28rpx;
  padding: 24rpx 0;
  position: relative;
}

.collection .employees .employees_li .emp_name {
  color: #2c67f2;
  margin-bottom: 18rpx;
}

.collection .employees .employees_li.emp_name {
  color: #2c67f2;
  padding-top: 50rpx;
}

.collection .employees .employees_li .emp_code {
  font-size: 23rpx;
  color: #92979b;
}

.collection .employees .employees_li .amount {
  position: absolute;
  width: 30rpx;
  height: 42rpx;
  background: #fff;
  top: 48rpx;
  left: 30rpx;
}

.collection .employees .employees_li .percent {
  position: absolute;
  width: 30rpx;
  height: 42rpx;
  background: #fff;
  top: 48rpx;
  right: 30rpx;
  z-index: 11;
}

.collection .employees .employees_li input {
  border-bottom: 2rpx solid #dddddd;
  width: 130rpx;
  box-sizing: border-box;
  margin: 16rpx auto 0;
}

.collection .employees .employees_li .seeamount {
  margin: 24rpx 0;
}

.collection .employees .employees_li .seepercent {
  margin: 24rpx 0;
}

.collection .employees .employees_li .clear {
  width: 70rpx;
  height: 60rpx;
  position: absolute;
  left: -80rpx;
  top: 50%;
  transform: translateY(-50%);
  border-radius: 50%;
  box-shadow: 0 12rpx 23rpx 0 rgba(0, 0, 0, 0.5);
}

.collection .employees .employees_li .results {
  width: 70rpx;
  height: 60rpx;
  position: absolute;
  right: -80rpx;
  top: 50%;
  transform: translateY(-50%);
  border-radius: 50%;
  box-shadow: 0 12rpx 23rpx 0 rgba(88, 138, 255, 0.5);
}

.collection .already {
  text-align: right;
  font-size: 28rpx;
  padding: 34rpx 34rpx 0;
}

.collection .already .amount {
  display: inline-block;
  color: #dc1d54;
}

.callot_btn {
  text-align: center;
  font-size: 35rpx;
  padding: 30rpx;
  margin: 58rpx 35rpx;
  color: #fff;
  background-color: #588aff;
  box-shadow: 0 12rpx 23rpx 0 rgba(88, 138, 255, 0.5);
  border-radius: 50rpx;
}
