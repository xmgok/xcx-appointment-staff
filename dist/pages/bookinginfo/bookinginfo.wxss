.content_state {
  padding: 58rpx 35rpx;
  background: #f5f5f5;
}

.content_state .state_text {
  display: -webkit-box;
  -webkit-box-pack: justify;
  font-size: 25rpx;
  color: #666666;
  line-height: 46rpx;
}

.content_state .state_text .text_name {
  margin-bottom: 56rpx;
  font-size: 46rpx;
  color: #000000;
}

.content_state .state_mark {
  background-image: linear-gradient(90deg, #ff4e81 0%, #ffbd7b 100%), linear-gradient(#ffffff, #ffffff);
  background-blend-mode: normal, normal;
  box-shadow: 0 20rpx 40rpx 0 rgba(255, 95, 128, 0.3);
  border-radius: 12rpx;
  padding: 44rpx 36rpx;
  color: #fff;
}

.content_state .state_mark .mark_vip {
  font-size: 25rpx;
  margin-bottom: 22rpx;
}

.content_state .state_mark .mark_num {
  font-size: 35rpx;
}

.info_content {
  background: #fff;
  box-shadow: inset 0rpx 1rpx 0rpx 0rpx #dddddd;
  padding: 56rpx 35rpx;
}

.info_content .info_cell {
  margin: 0 35rpx;
  line-height: 70rpx;
  font-size: 25rpx;
  color: #92979b;
  display: -webkit-box;
}

.info_content .info_cell .cell_color {
  color: #000;
}

.info_content .info_cell .title {
  color: #92979b;
}

.info_content .booking_btn {
  margin-top: 70rpx;
  text-align: center;
  padding: 30rpx;
  font-size: 35rpx;
  border-radius: 100rpx;
  border: none;
  background: #588aff;
  color: #fff;
  box-shadow: 0 12rpx 40rpx 0 rgba(88, 138, 255, 0.3);
}
