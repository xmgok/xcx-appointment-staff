.search {
  display: flex;
  justify-content: center;
}

.search .search-form {
  font-family: SourceHanSansCN-Regular;
  font-size: 24rpx;
  font-weight: normal;
  font-stretch: normal;
  letter-spacing: 0;
  color: #aaaaaa;
  display: flex;
  height: 104rpx;
  width: 680rpx;
  margin: auto auto 34rpx auto;
  background-color: #fff;
  justify-content: flex-start;
  align-items: center;
  border-radius: 4rpx;
}

.search .search-form .icon {
  margin: auto 12rpx auto 22rpx;
}

.search .search-form input {
  font-size: 30rpx;
  width: 580rpx;
}

.tec_tab {
  display: -webkit-box;
  line-height: 106rpx;
  text-align: center;
  background: #fff;
  box-shadow: inset 0rpx -1rpx 0rpx 0rpx #dddddd;
}

.tec_tab .tec_tab_li {
  -webkit-box-flex: 1;
  font-size: 28rpx;
  color: #666666;
}

.tec_tab .tec_tab_li.active {
  border-bottom: 1rpx solid #5D97FF;
  color: #5D97FF;
}

.sc_content {
  display: -webkit-box;
  min-height: 100vh;
  margin-bottom: 106rpx;
}

.sc_content .server_list {
  width: 152rpx;
  background: #f5f5f5;
  box-shadow: inset -1rpx 0 0 0 #dddddd;
}

.sc_content .server_list .server_list_li {
  width: 100%;
  box-shadow: inset 0rpx -1rpx 0rpx 0rpx #dddddd;
  text-align: center;
  color: #333333;
  font-size: 23rpx;
}

.sc_content .server_list .server_list_li.active {
  color: #5D97FF;
  background: #fff;
}

.sc_content .server_list .server_list_li .wrap_li {
  display: flex;
  height: 106rpx;
  flex-direction: column;
  align-items: center;
  margin: auto;
}

.sc_content .server_list .server_list_li .wrap_li .name {
  margin: 22rpx auto 16rpx auto;
}

.sc_content .server_list .server_list_li .wrap_li .tip {
  color: #f96868;
}

.sc_content .Product_list {
  -webkit-box-flex: 1;
}

.sc_content .Product_list .Product_list_li {
  padding: 34rpx;
  background: #fff;
  display: -webkit-box;
  -webkit-box-pack: justify;
  font-size: 23rpx;
  box-shadow: inset 0rpx -1rpx 0rpx 0rpx #dddddd;
}

.sc_content .Product_list .Product_list_li .Product_name {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 28rpx;
}

.sc_content .Product_list .Product_list_li .Product_date {
  color: #92979b;
}

.sc_content .Product_list .Product_list_li .price {
  margin-top: 28rpx;
}

.sc_content .Product_list .Product_list_li .price .Product_Present {
  color: #f96868;
  display: inline-block;
  margin-right: 16rpx;
}

.sc_content .Product_list .Product_list_li .price .Product_price {
  color: #cccccc;
  display: inline-block;
  text-decoration: line-through;
}

.sc_content .Product_list .Product_list_li .Product_count {
  padding: 50rpx 0;
}

.sc_content .Product_list .Product_list_li .Product_count .icons_count {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  border: solid 2rpx #bbbbbb;
  border-radius: 50%;
  text-align: center;
  line-height: 40rpx;
  font-size: 32rpx;
}

.sc_content .Product_list .Product_list_li .Product_count .icons_count.count_minus {
  color: #bbbbbb;
}

.sc_content .Product_list .Product_list_li .Product_count .icons_count.count_add {
  background: #f96868;
  color: #fff;
}

.sc_content .Product_list .Product_list_li .Product_count .counting {
  display: inline-block;
  font-size: 28rpx;
  color: #333;
  margin: 0 22rpx;
}

.Fixed {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 106rpx;
  z-index: 1;
  background-color: #ffffff;
  display: -webkit-box;
  -webkit-box-pack: justify;
  box-shadow: 0 4rpx 23rpx 0 rgba(0, 0, 0, 0.1);
}

.Fixed .people {
  margin-left: 36rpx;
  line-height: 106rpx;
  color: #92979b;
  font-size: 28rpx;
}

.Fixed .people .number {
  font-size: 35rpx;
  color: #f96868;
  display: inline-block;
}

.Fixed .submit {
  line-height: 106rpx;
  font-size: 35rpx;
  padding: 0 78rpx;
  background: #5D97FF;
  color: #fff;
}
