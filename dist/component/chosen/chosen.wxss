.fixed {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 90rpx;
  background-color: rgba(0, 0, 0, 0.2);
}

.fixed .fixed_content {
  position: absolute;
  bottom: 0;
  width: 100%;
  background-color: #fff;
}

.fixed .fixed_content .fixed_main {
  max-height: 280rpx;
  overflow-y: auto;
}

.fixed .fixed_content .fixed_main .item .cell {
  display: -webkit-flex;
  justify-content: space-between;
  padding: 26rpx;
  border-bottom: 1rpx solid #ccc;
}

.fixed .fixed_content .fixed_main .item .cell .item_count .icons_count {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  border: solid 1rpx #bbbbbb;
  border-radius: 50%;
  text-align: center;
  line-height: 40rpx;
  font-size: 32rpx;
}

.fixed .fixed_content .fixed_main .item .cell .item_count .icons_count.count_minus {
  color: #bbbbbb;
}

.fixed .fixed_content .fixed_main .item .cell .item_count .icons_count.count_add {
  background: #f96868;
  color: #fff;
  border: 0;
}

.fixed .fixed_content .fixed_main .item .cell .item_count .counting {
  display: inline-block;
  font-size: 28rpx;
  color: #333;
  margin: 0 22rpx;
}

.fixed .fixed_content .fixed_title {
  padding: 26rpx;
  display: -webkit-flex;
  justify-content: space-between;
  background-color: #f5f5f5;
  border-bottom: 1rpx solid #ccc;
}

.fixed .fixed_content .fixed_title .clear_all {
  color: #333333;
}

.chosen_wrap {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  line-height: 90rpx;
  background-color: #fff;
  box-shadow: 0 4rpx 23rpx #efefef;
  display: -webkit-box;
  -webkit-box-pack: justify;
}

.chosen_wrap .select_info {
  padding-left: 38rpx;
  -webkit-box-flex: 1;
}

.chosen_wrap .select_info .num {
  color: #f96868;
}

.chosen_wrap .select_btn {
  background-color: #5D97FF;
  color: #fff;
  font-size: 36rpx;
  width: 256rpx;
  text-align: center;
}

.chosen_wrap .select_btn.no_select {
  background-color: #dddddd;
}
