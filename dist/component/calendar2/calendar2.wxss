.wx-bg {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  background: rgba(0, 0, 0, 0.7);
  z-index: 998;
}

.calendar_wrap {
  background-color: #fff;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 999;
  width: 100%;
}

.calendar_wrap .calendar_title {
  padding: 0 30rpx;
  background-color: #f5f5f5;
  line-height: 100rpx;
  text-align: center;
  font-size: 30rpx;
  color: #000000;
  display: -webkit-box;
  -webkit-box-align: center;
}

.calendar_wrap .calendar_title .title {
  -webkit-box-flex: 1;
}

.calendar_wrap .calendar_title .sure_btn {
  font-size: 24rpx;
  color: #2c67f2;
}

.calendar_wrap .calendar_title .cancle_btn {
  color: #92979b;
  font-size: 24rpx;
}

.date-show {
  display: -webkit-box;
  -webkit-box-pack: end;
  color: #92979b;
  line-height: 90rpx;
}

.date-show .text {
  color: #000000;
  padding: 0 20rpx;
}

.header {
  display: -webkit-box;
  color: #000000;
  font-size: 20rpx;
}

.header > view {
  -webkit-box-flex: 1;
  text-align: center;
}

.sdfsdf {
  font-size: 0;
  width: 742rpx;
  margin: 0 auto;
  padding: 10rpx 0;
}

.sdfsdf .item {
  display: inline-block;
  vertical-align: top;
  font-size: 20rpx;
  width: 106rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  position: relative;
  box-sizing: border-box;
  padding-top: 15rpx;
}

.sdfsdf .item.nowDay {
  color: #dc1d54;
}

.sdfsdf .item .bg {
  background: #ffe5ed;
  height: 40rpx;
}

.sdfsdf .item .bg.bg2 {
  width: 50rpx;
  margin-left: 56rpx;
}

.sdfsdf .item .bg.bg3 {
  width: 50rpx;
}

.sdfsdf .item .num {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.sdfsdf .item .num.num2 {
  background: #ff5183;
  width: 70rpx;
  border-radius: 50%;
  color: white;
  margin-left: 18rpx;
}
