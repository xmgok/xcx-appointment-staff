.calendar_wrap {
  background-color: rgba(0, 0, 0, 0.2);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10001;
}

.calendar_wrap .calendar_content {
  position: absolute;
  bottom: 0;
  width: 100%;
  background-color: #fff;
}

.calendar_wrap .calendar_title {
  padding: 0 30rpx;
  background-color: #f5f5f5;
  line-height: 120rpx;
  text-align: center;
  font-size: 34rpx;
}

.calendar_wrap .calendar_title .sure_btn {
  color: #2c67f2;
  font-size: 28rpx;
}

.calendar_wrap .calendar_title .cancle_btn {
  color: #92979b;
  font-size: 28rpx;
}

.date-show {
  position: relative;
  width: 250rpx;
  font-family: PingFang-SC-Regular;
  font-size: 40rpx;
  color: #282828;
  text-align: center;
  margin: 59rpx auto 10rpx;
}

.lf {
  float: left;
}

.rt {
  float: right;
}

.clear::after {
  content: '';
  display: block;
  clear: both;
}

.lt-arrow,
.rt-arrow {
  position: absolute;
  top: 1rpx;
  width: 60rpx;
  height: 60rpx;
}

.lt-arrow {
  left: -110rpx;
}

.rt-arrow {
  right: -100rpx;
}

.header {
  font-size: 0;
  padding: 0 24rpx;
}

.header > view {
  display: inline-block;
  width: 14.285%;
  color: #333;
  font-size: 30rpx;
  text-align: center;
  border-bottom: 2rpx solid #D0D0D0;
  padding: 39rpx 0;
}

.weekMark {
  position: relative;
}

.weekMark view {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  border-bottom: 2rpx solid #22A7F6;
}

.date-box {
  font-size: 0;
  padding: 10rpx 0;
}

.date-box .disc {
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  line-height: 6rpx;
  margin: 0 auto;
}

.date-box .disc.disc1 {
  background: #FF5183;
}

.date-box .disc.disc2 {
  background: #ccc;
}

.date-box .disc.disc3 {
  background: #fff;
}

.date-box > view {
  position: relative;
  display: inline-block;
  width: 14.285%;
  height: 14.285%;
  color: #020202;
  font-size: 40rpx;
  text-align: center;
  vertical-align: middle;
  margin: 15rpx 0;
}

.date-head {
  height: 70rpx;
  width: 70rpx;
  line-height: 70rpx;
  font-size: 26rpx;
  margin: 0 auto;
}

.nowDay {
  text-align: center;
  margin: 0 auto;
  text-align: center;
}

.nowDay .date-head {
  border-radius: 50%;
  background-color: #FF5183;
  color: #fff;
}

.one {
  position: absolute;
  bottom: 0;
  right: 5rpx;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: red;
}

.two {
  position: absolute;
  bottom: 30rpx;
  right: 5rpx;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: blue;
}
