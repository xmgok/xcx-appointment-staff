.sc_content {
  display: -webkit-box;
  min-height: 100vh;
  margin-bottom: 106rpx;
}

.sc_content .server_list {
  width: 152rpx;
  background: #f5f5f5;
  box-shadow: inset -1rpx 0 0 0 #dddddd;
}

.sc_content .server_list .server_list_li {
  width: 100%;
  padding: 24rpx 0;
  box-shadow: inset 0rpx -1rpx 0rpx 0rpx #dddddd;
  text-align: center;
  color: #333333;
  font-size: 24rpx;
}

.sc_content .server_list .server_list_li.active {
  background: #fff;
}

.sc_content .server_list .server_list_li.active .due {
  font-size: 18rpx;
  color: #FF5183;
}

.sc_content .Product_list {
  -webkit-box-flex: 1;
}

.sc_content .Product_list .Product_list_li {
  padding: 34rpx;
  background: #fff;
  display: -webkit-box;
  -webkit-box-pack: justify;
  font-size: 23rpx;
  box-shadow: inset 0rpx -1rpx 0rpx 0rpx #dddddd;
  position: relative;
}

.sc_content .Product_list .Product_list_li.past_due {
  color: #aaa !important;
}

.sc_content .Product_list .Product_list_li.past_due .past_due_btn {
  display: inline-block;
  padding: 2rpx 6rpx;
  border-radius: 4rpx;
  background-color: #ccc;
  font-size: 20rpx;
}

.sc_content .Product_list .Product_list_li .Product_name {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 28rpx;
}

.sc_content .Product_list .Product_list_li .Product_date {
  color: #92979b;
}

.sc_content .Product_list .Product_list_li .price {
  margin-top: 28rpx;
}

.sc_content .Product_list .Product_list_li .price .text {
  color: #FF5183;
}

.sc_content .Product_list .Product_list_li .price .Product_Present {
  display: inline-block;
  margin-right: 16rpx;
}

.sc_content .Product_list .Product_list_li .price .Product_price {
  color: #cccccc;
  display: inline-block;
}

.sc_content .Product_list .Product_list_li .Product_count {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 30rpx;
}

.sc_content .Product_list .Product_list_li .Product_count .icons_count {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  border: solid 1rpx #bbbbbb;
  border-radius: 50%;
  text-align: center;
  line-height: 40rpx;
  font-size: 32rpx;
}

.sc_content .Product_list .Product_list_li .Product_count .icons_count.count_minus {
  color: #bbbbbb;
}

.sc_content .Product_list .Product_list_li .Product_count .icons_count.count_add {
  background: #f96868;
  color: #fff;
  border: 0;
}

.sc_content .Product_list .Product_list_li .Product_count .counting {
  display: inline-block;
  font-size: 28rpx;
  color: #333;
  margin: 0 22rpx;
}
