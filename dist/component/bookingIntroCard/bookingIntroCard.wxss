.customer_card_wrap {
  margin-top: 24rpx;
}

.customer_card_wrap .customer_card {
  background-color: #fff;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 23rpx #efefef;
  padding: 58rpx 30rpx;
}

.customer_card_wrap .customer_card .cust_content {
  position: relative;
}

.customer_card_wrap .customer_card .cust_content .status_btn {
  color: #fff;
  border-radius: 100rpx;
}

.customer_card_wrap .customer_card .cust_content.no_confirmed {
  border-left: 5rpx solid #FF5183;
}

.customer_card_wrap .customer_card .cust_content.no_confirmed .status_btn {
  background-color: #FF5183;
}

.customer_card_wrap .customer_card .cust_content.confirmed {
  border-left: 5rpx solid #16ba5a;
}

.customer_card_wrap .customer_card .cust_content.confirmed .status_btn {
  background-color: #16ba5a;
}

.customer_card_wrap .customer_card .cust_content.completed {
  border-left: 5rpx solid #bbbbbb;
}

.customer_card_wrap .customer_card .cust_content.completed .status_btn {
  background-color: #bbbbbb;
}

.customer_card_wrap .customer_card .cust_content .status_btn {
  display: inline-block;
  padding: 8rpx 16rpx;
  position: absolute;
  top: 0;
  right: 0;
}

.customer_card_wrap .customer_card .cust_content .cust_ul {
  padding-left: 34rpx;
}

.customer_card_wrap .customer_card .cust_content .cust_ul .cust_li {
  margin-bottom: 30rpx;
}

.customer_card_wrap .customer_card .cust_content .cust_ul .cust_li .icons {
  color: #5D97FF;
}

.customer_card_wrap .customer_card .cust_content .cust_ul .cust_li:last-child {
  margin-bottom: 0;
}

.customer_card_wrap .customer_card .cust_content .cust_ul .cust_li.booking_item {
  color: #aaa;
}

.customer_card_wrap .customer_card .cust_content .cust_ul .cust_li.cust_name {
  font-size: 38rpx;
}

.lf {
  float: left;
}

.rt {
  float: right;
}

.clear::after {
  display: block;
  clear: both;
  content: "";
}
