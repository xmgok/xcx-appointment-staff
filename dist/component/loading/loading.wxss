@keyframes g-loadings {
  0% {
    transform: translate(0);
  }
  50% {
    transform: translate(20rpx);
  }
  100% {
    transform: translate(0);
  }
}

@keyframes g-loadings2 {
  0% {
    transform: translate(0);
  }
  50% {
    transform: translate(-20rpx);
  }
  100% {
    transform: translate(0);
  }
}

.loadings-wrap {
  text-align: center;
  color: #aaaaaa;
  font-size: 24rpx;
}

.loadings-wrap .loadings {
  padding: 40rpx 0 0;
  display: -webkit-box;
  -webkit-box-align: center;
  -webkit-box-pack: center;
}

.loadings-wrap .loadings .disc {
  background: #5D97FF;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
}

.loadings-wrap .loadings .disc.blue {
  animation: g-loadings 1s 0s infinite cubic-bezier(0.85, 0.25, 0.37, 0.85);
}

.loadings-wrap .loadings .disc.black {
  animation: g-loadings2 1s 0s infinite cubic-bezier(0.85, 0.25, 0.37, 0.85);
  background: #f96868;
}

.loadings-wrap .text {
  line-height: 60rpx;
}
